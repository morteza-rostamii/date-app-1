{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src", // Base directory for absolute imports
    "paths": {
      "@/*": ["*"] // Maps @/ to ./src/
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
